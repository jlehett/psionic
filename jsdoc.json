{
    "source": {
        "include": ["packages", "package.json", "README.md"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules|docs|lib|ui)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "encoding": "utf8",
        "template": "node_modules/psionic-doc-gen",
        "destination": "public/docs/",
        "recurse": true,
        "verbose": true
    },
    "templates": {
        "search": true,
        "better-docs": {
            "name": "Psionic"
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true,
        "tags": ["load"]
    },
    "sourceType": "module"
}